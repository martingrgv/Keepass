<Window x:Class="Keepass.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Keepass.Wpf.Views"
        mc:Ignorable="d"
        Title="Keepass" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button x:Name="btnReloadSecrets" Content="Reload" Click="btnReloadSecrets_Click" Margin="300 10"/>
            <Button x:Name="btnCreateSecrets" Content="Create Secret" Click="btnCreateSecrets_Click" Margin="300 10"/>
            <DataGrid x:Name="dataGridSecrets" AutoGenerateColumns="True" MaxWidth="800" Height="350"  MaxHeight="350" />
        </StackPanel>
    </Grid>
</Window>
