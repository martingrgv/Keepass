<Window x:Class="Keepass.Wpf.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Keepass.Wpf"
        mc:Ignorable="d"
        Title="Login" Height="280" Width="400">
    <Grid>
        <TextBlock Name="validationMessage" FontSize="14" HorizontalAlignment="Center" Foreground="Red" Margin="10"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <TextBlock FontSize="24" Text="Login to Password Manager" HorizontalAlignment="Center"/>

            <PasswordBox Name="passwordBox" PasswordChanged="passwordBox_PasswordChanged" Width="300" Margin="10"/>

            <Button Name="btnEnter" Content="Login" Click="btnEnter_Click" Width="200" Height="40" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
