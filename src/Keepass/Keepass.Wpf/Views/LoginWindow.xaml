<Window x:Class="Keepass.Wpf.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Keepass.Wpf"
        mc:Ignorable="d"
        Title="Login" Height="280" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label x:Name="labelKey" Content="Key:" Margin="10 0"/>
                <TextBox x:Name="textBlockKey" Width="262" />
            </StackPanel>

            <Button x:Name="btnEnter" Content="Enter Key" Click="btnEnter_Click" Padding="0,3"  Margin="40 10" />
        </StackPanel>
    </Grid>
</Window>
